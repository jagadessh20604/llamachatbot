{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/health",
            "destination": "app.py"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "app.py",
            "methods": ["GET", "POST", "OPTIONS"],
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "Content-Type, Authorization",
                "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
                "Access-Control-Allow-Credentials": "true"
            }
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
} 